<UserControl x:Class="WpfApp4.Views.ItemManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp4.Views"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left"
            Orientation="Horizontal" Margin="5 0 0 0">
            <Button Content="Add" Command="{Binding AddCommand}"/>
            <Button Content="Edit" Command="{Binding EditCommand}"/>
            <Button Content="Remove" Command="{Binding RemoveCommand}"/>
            <Button Content="Debug" Command="{Binding DebugCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
