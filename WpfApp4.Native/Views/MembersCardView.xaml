<Window x:Class="LibraryManagement.Views.MembersCardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagement.Views"
        mc:Ignorable="d"
       Title="MembersCardView" Height="303" Width="250" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Margin="5 0 5 0">
            <Label Content="Id:"/>
            <TextBox Text="{Binding ReturnMember.Id}"/>
            <Label Content="First name:"/>
            <TextBox Text="{Binding ReturnMember.FirstName}"/>
            <Label Content="Last name:"/>
            <TextBox Text="{Binding ReturnMember.LastName}"/>
            <Label Content="Borrowed books:"/>
            <DataGrid ItemsSource="{Binding BorrowedBooks}" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="1*"/>
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="5*"/>
                    <DataGridTextColumn Header="Return date" Binding="{Binding DueTo}" Width="5*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="OK" Height="25" Margin="5" Command="{Binding OKCommand}"/>
            <Button Content="Cancel" Height="25" Margin="5" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
