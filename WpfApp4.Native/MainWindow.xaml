<Window x:Class="LibraryManagement.Native.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagement.Native"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left"
                    Orientation="Horizontal" Margin="5 0 0 0">
            <ComboBox Width="auto" Padding="5" Margin="5 0 5 0" 
                      ItemsSource="{Binding AvailableViewModels}" 
                      SelectedItem="{Binding SelectedViewModel}" 
                      DisplayMemberPath="OnDisplay"/>
        </StackPanel>
        <ContentControl Grid.Row="1" Content="{Binding SelectedViewModel}"/>
    </Grid>
</Window>